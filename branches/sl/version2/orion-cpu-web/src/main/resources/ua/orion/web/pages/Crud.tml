<html t:type="layout" title="Demo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
    <t:zone t:id="listZone">
        <t:InitCall function="closeCkWindow" window="editWindow"/><!--для вызова метода скрытия окна-->
        <t:grid source="objects" row="object" inplace="true" add="action"
                model="${dataSource.getBeanModelForList(objectClass)}">
            <p:actionCell>
                <t:EventLink t:event="edit" context="${object.id}" zone="editZone">Edit </t:EventLink>
                <t:EventLink t:event="view" context="${object.id}" zone="editZone">View </t:EventLink>
                <t:EventLink t:event="delete" context="${object.id}" zone="listZone">Del </t:EventLink>
            </p:actionCell>
        </t:grid>
    </t:zone>
    <t:EventLink t:event="add" zone="editZone">Add</t:EventLink>
    <t:block id="editBlock">
        <t:InitCall function="showCkWindow" window="editWindow" title="prop:mode" html="false" /><!--для вызова метода показа окна-->
        <t:beaneditform t:id="form" object="object" model="${dataSource.getBeanModelForEdit(objectClass)}"
                        zone="listZone" context="${object?.id}" submitLabel="prop:modeaction"/>
    </t:block>
    <t:block id="viewBlock">
        <t:InitCall function="showCkWindow" window="editWindow" title="prop:mode" html="false" /><!--для вызова метода показа окна-->
        <t:beandisplay t:id="display" object="object" model="${dataSource.getBeanModelForView(objectClass)}"/>
    </t:block>
    <t:ck.Window t:id="editWindow" t:style="bluelighting" show="false"
              modal="true" title="mode"
              width="500" height="200">
        <t:zone t:id="editZone"/>
    <a href="#" onclick="Windows.close('editWindow')">Close window </a>        
    </t:ck.Window>

</html>

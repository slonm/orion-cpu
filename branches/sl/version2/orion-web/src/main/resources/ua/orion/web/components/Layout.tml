<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>${title}</title>
    </head>
    <body>
        <!-- start header -->
        <div id="header">
            <span id="menu"><t:menu.menubar menudata="menudata" /></span>
        </div>
        <br/>
        <t:security.Authenticated>
            ${message:label.user}: ${user} (${role}) <t:ActionLink t:id="logout"> ${message:action.logout}</t:ActionLink>
        </t:security.Authenticated>
        <t:security.NotAuthenticated>
            <t:pagelink page="security/login">${message:action.login}</t:pagelink>
        </t:security.NotAuthenticated>
        <t:if test="role">
            <t:EventLink t:event="setRoleMode">${message:action.setRoleMode}</t:EventLink>
        </t:if>        
        <!-- end header -->
        <!-- start page -->
        <div id="page">
            <!-- start content -->
            <div id="content">
                <t:if test="role">
                    <div class="post">
                        <div class="title"><h2>${title}</h2></div>
                        <div class="entry">
                            <t:body/>
                        </div>
                    </div>
                    <p:else>
                        <t:form t:id="roleForm">
                            <t:label for="selectRole"/>
                            <t:select t:id="selectRole" label="message:label.selectRole" model="roleModel" blankOption="never" value="role"/><br/>
                            <t:submit value="message:action.selectRole" />
                        </t:form>
                    </p:else>
                </t:if>    
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->
        <!-- start footer -->
        <div id="footer">
            <p class="legal">
                &copy;2009 orion. All Rights Reserved.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Design by
                <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Icons by
                <a href="http://famfamfam.com/">FAMFAMFAM</a>.
            </p>
        </div>
        <!-- end footer -->
    </body>
</html>

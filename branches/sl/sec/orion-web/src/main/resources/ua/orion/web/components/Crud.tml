<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
     xmlns:p="tapestry:parameter"
     xmlns:s="tapestry-library:security"
     xmlns:j="tapestry-library:jquery">
    <div id="${popupWindowId}" class="dialog" style="display:none;">
        <div class="window-content">
            <t:zone t:id="popupZone"/>
        </div>
    </div>
    <div id="crud-grid-buttons" class="ui-widget-header" style="width: 99%;">
        <t:if test="canAdd">
            <s:HasPermission permission="${entityType}:insert">
                <t:EventLink class="ui-button-add" t:event="add" zone="popupZone">${message:action.add}</t:EventLink>
            </s:HasPermission>
        </t:if>
        <t:if test="maserType">
            <t:PageLink class="ui-button-tolist" t:page="prop:masterCrudPage">${message:action.list}</t:PageLink>
        </t:if>    
    </div>
    <t:zone t:id="listZone" id="${listZoneId}">
        <t:grid t:mixins="ori/CurrentBeanInformer" source="source" row="object" inplace="true" add="action" reorder="action" lean="true"
                model="dataSource.getBeanModelForList(entityClass,messages)" pagerPosition="literal:bottom">
            <p:actionCell>
                <table class="ui-grid-cell-action-tip ui-widget-header">
                    <t:if test="detailPage">
                        <s:HasPermission permission="${entityType}:read:${id}">
                            <tr><td>
                                    <t:PageLink class="ui-button-detail" t:page="prop:detailPage" context="object">${message:action.detail}</t:PageLink>
                                </td></tr>
                        </s:HasPermission>
                    </t:if>    
                    <t:if test="showEditButton">
                        <s:HasPermission permission="${entityType}:update:${id}">
                            <tr><td>
                                    <t:EventLink class="ui-button-edit"
                                                 t:event="edit" context="object" zone="popupZone">${message:action.edit}</t:EventLink>
                                </td></tr>
                        </s:HasPermission>
                    </t:if>    
                    <t:if test="showViewButton">
                        <s:HasPermission permission="${entityType}:read:${id}">
                            <tr><td>
                                    <t:EventLink class="ui-button-view" t:event="view" context="object" zone="popupZone">${message:action.view}</t:EventLink>
                                </td></tr>
                        </s:HasPermission>
                    </t:if>    
                    <t:if test="showDelButton">
                        <s:HasPermission permission="${entityType}:delete:${id}">
                            <tr><td>
                                    <t:EventLink class="ui-button-del" t:event="trydelete" context="object" zone="popupZone">${message:action.del}</t:EventLink>
                                </td></tr>
                        </s:HasPermission>
                    </t:if>    
                </table>
                <button class="ui-button-right-list-tfalse"/>
            </p:actionCell>
        </t:grid>
    </t:zone>
    <t:block id="defaultEditBlock">
        <t:ori.beaneditformext t:mixins="ori/CurrentBeanInformer" t:id="editForm" object="object" model="dataSource.getBeanModelForEdit(entityClass,messages)"
                               zone="prop:listZoneId" submitLabel="message:action.edit" buttons="hideWindowButtonBlock"/>
    </t:block>
    <t:block id="defaultAddBlock">
        <t:ori.beaneditformext t:mixins="ori/CurrentBeanInformer" t:id="addForm" object="object" model="dataSource.getBeanModelForAdd(entityClass,messages)"
                               zone="prop:listZoneId" submitLabel="message:action.add" buttons="hideWindowButtonBlock"/>
    </t:block>
    <t:block id="hideWindowButtonBlock">
        <a href="cancel" onclick="javascript: jQuery('#${popupWindowId}').dialog('close'); return false;" class="ui-button-close" style="margin-top: 5px; display:inline-block">
            ${message:action.cancel}
        </a>        
    </t:block>
    <t:block id="defaultViewBlock">
        <t:beandisplay t:mixins="ori/CurrentBeanInformer" t:id="display" object="object" model="dataSource.getBeanModelForView(entityClass,messages)"/>
        <t:delegate to="hideWindowButtonBlock"/>
    </t:block>
    <t:block id="deleteBlock">
        <table>
            <tr>
                <td>
                    <t:EventLink t:event="delete" context="object" zone="prop:listZoneId" class="ui-button-del">${message:action.del}</t:EventLink>
                </td>
                <td>
                    <a href="cancel" onclick="javascript: jQuery('#${popupWindowId}').dialog('close'); return false;" class="ui-button-cancel">${message:action.cancel}</a>
                </td>
            </tr>
        </table>
    </t:block>
    <div id="ui-ajax-loading-window" title="${message:label.system-message}">
        <span>
            <div class="ui-ajax-loading-window-icon"></div>
        </span>
        <text id="ui-ajax-loading-window-load-text" style="display: none">${message:label.ajax-load-crud}</text>
        <text id="ui-ajax-loading-window-save-text" style="display: none">${message:label.ajax-save-crud}</text>
        <br/>
        <div class="ui-ajax-loading-window-load"></div>
    </div>
</div>

<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>parent</artifactId>
		<groupId>br.com.arsmachina</groupId>
		<version>1.1.sl</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>br.com.arsmachina</groupId>
	<artifactId>tapestry-crud-hibernate</artifactId>
	<name>Tapestry CRUD-Hibernate</name>
	<version>1.1.sl</version>
	<description>
		A package that provides Hibernate integration with Tapestry CRUD.
	</description>
	<dependencies>
		<dependency>
			<groupId>br.com.arsmachina</groupId>
			<artifactId>tapestry-crud</artifactId>
		</dependency>
		<dependency>
			<groupId>br.com.arsmachina</groupId>
			<artifactId>generic-dao-hibernate</artifactId>
		</dependency>
		<dependency>
			<groupId>br.com.arsmachina</groupId>
			<artifactId>application-module</artifactId>
		</dependency>
		<dependency>
			<groupId>br.com.arsmachina</groupId>
			<artifactId>application-module-hibernate</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestEntries>
							<Tapestry-Module-Classes>
								br.com.arsmachina.tapestrycrud.hibernate.ioc.TapestryCrudHibernateModule
							</Tapestry-Module-Classes>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>